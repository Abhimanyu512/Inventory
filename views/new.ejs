<% include partials/header %>
<div class="ui container">
    <div class="ui segment" style="width: 50%; margin-left: auto; margin-right: auto; margin-top: 10%">
        <h1 class="ui center aligned header">Add New Item</h1>
        <form class="ui form" action="/index" method="POST" style="width: 75%; margin: auto;">
            <div class="field">
                <input type="text" name="item[name]" placeholder="name">
            </div>
            <div class="field">
                <input type="text" name="item[seller]" placeholder="seller">
            </div>
            <div class="field">
                <input type="text" name="item[image]" placeholder="image URL">
            </div>
            <div class="field">
                <input type="number" name="item[price]" placeholder="price">
            </div>
            <div class="field">
                <textarea name="item[desc]" cols="30" rows="10">Add Description Here</textarea>
            </div>
            <button class="ui blue button">Submit</button>
            <a href="/index" style="margin: 2px;">Go Back</a>
        </form>
    </div>
</div>

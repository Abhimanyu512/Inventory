<% include partials/header %>
<div class="ui main text container segment" style="margin-top: 10%;">
    <div class="ui huge centered header">
        <%= item.name %>
    </div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= item.image %>" alt="">
            <div class="content">
                created on
            </div>
            <div class="description">
                <p><strong>PRICE: </strong><%= item.price %></p>
                <p><strong>SELLER: </strong><%= item.seller%></p>
                <p><%=item.desc%></p>
            </div>
            <div style="margin-top: 10px;">
                <a class="ui labeled icon green button" href="/index/<%=item._id%>/edit">
                    <i class="edit icon"></i>
                    Edit
                </a>
                <a class="ui labeled icon blue button" href="/index">
                    <i class="arrow left icon"></i>
                    Go Back
                </a>
                <form action="/index/<%= item._id %>?_method=DELETE" method="POST" style="display: inline;">
                    <button class="ui labeled icon red button">
                        <i class="trash alternate icon"></i>
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<% include partials/footer %>